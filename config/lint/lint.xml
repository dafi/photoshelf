<?xml version="1.0" encoding="UTF-8"?>
<!-- The full list is available at http://tools.android.com/tips/lint-checks -->
<lint>
    <issue id="InvalidPackage" severity="error">
        <ignore path="**/scribe*.jar" />
        <ignore path="**/dropbox*.jar" />
        <ignore regexp="kotlinx.coroutines.debug.AgentPremain"/>
    </issue>

    <issue id="HardcodedText">
        <!-- Ignore on incomplete files, they will change/be removed in the future -->
        <ignore path="**/res/layout/fragment_best_of.xml" />
    </issue>

    <issue id="RtlEnabled">
        <ignore path="**/AndroidManifest.xml" />
    </issue>

    <issue id="UnusedResources">
        <ignore path="*.xml" />
    </issue>

    <issue id="InvalidSetHasFixedSize" severity="warning"/>

    <issue id="NotifyDataSetChanged" severity="ignore"/>
</lint>