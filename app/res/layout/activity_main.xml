<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:columnCount="2"
    android:orientation="vertical"
    android:rowCount="2" >

    <Button
        android:id="@+id/draft_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|top"
        android:text="@string/draft_title"
        android:textSize="16sp" />

    <Button
        android:id="@+id/scheduled_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|top"
        android:text="@string/scheduled_title"
        android:textSize="16sp" />

    <Button
        android:id="@+id/test_page_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|top"
        android:text="@string/test_page_title"
        android:textSize="16sp" />

    <Button
        android:id="@+id/birthdays_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|top"
        android:text="@string/birthdays_title"
        android:textSize="16sp" />

</GridLayout>