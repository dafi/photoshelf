<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="3"
        android:orientation="vertical"
        android:rowCount="1" >

        <Button
            android:id="@+id/birthdays"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left|top"
            android:text="@string/birthdays_title"
            android:textSize="@dimen/main_button_title_size" />

        <Button
            android:id="@+id/birthdays_publisher"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left|top"
            android:text="Today birthdays"
            android:textSize="@dimen/main_button_title_size" />

        <Button
            android:id="@+id/test_page_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left|top"
            android:text="@string/test_page_title"
            android:textSize="@dimen/main_button_title_size" />
    </GridLayout>

</RelativeLayout>