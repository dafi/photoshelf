<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Drawer" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#555555</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DrawerHeaderListItem" parent="style/Drawer">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerListItem" parent="style/Drawer">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>

</resources>