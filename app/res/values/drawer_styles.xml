<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Drawer" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/drawer_menu_item</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DrawerHeaderListItem" parent="style/Drawer">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerListItem" parent="style/Drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:textColor">@color/drawer_row_text_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <style name="DrawerCounterItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/drawer_counter_bg</item>
        <item name="android:textColor">@color/drawer_counter_text_color</item>
    </style>

</resources>