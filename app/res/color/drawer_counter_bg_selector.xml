<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The row containing the counter is selected -->
    <item android:state_activated="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/drawer_item_counter_selected_bg" />

            <padding
                android:left="5dp"
                android:right="5dp" >
            </padding>

            <corners android:radius="2dp" />
        </shape>

    </item>
    <!-- The row containing the counter is normal (ie not selected, not focused, ...) -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/drawer_item_counter_bg" />

            <padding
                android:left="5dp"
                android:right="5dp" >
            </padding>

            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>
