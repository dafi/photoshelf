<?xml version="1.0" encoding="utf-8"?>
<com.ternaryop.widget.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:top="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="140dp">

        <com.ternaryop.widget.CheckableImageView
            android:id="@+id/thumbnail_image"
            android:layout_height="140dp"
            android:layout_width="140dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            top:checkedColorFilter="#77888888"
            android:src="@drawable/stub" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/bg_actions"
            android:layout_height="35dp"
            android:layout_width="fill_parent"
            android:src="@drawable/bg_actions"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/ic_show_image_action"
            android:contentDescription="@string/menu_show_image"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/ic_action_show_image"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp" />
    </RelativeLayout>

</com.ternaryop.widget.CheckableRelativeLayout>