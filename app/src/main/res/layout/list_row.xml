<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:top="http://schemas.android.com/apk/res-auto"
                android:id="@+id/list_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/statelist_selected_item_background"
                android:padding="5dip">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dip"
        android:background="@drawable/image_bg"
        android:padding="3dip" >

        <com.ternaryop.widget.ClickableImageView
            android:id="@+id/thumbnail_image"
            android:layout_width="75dip"
            android:layout_height="75dip" />
    </LinearLayout>

    <com.ternaryop.widget.ClickableTextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:textSize="15sp"
        android:textStyle="bold"
        top:clickedColor="@color/link_text_color_clicked"
        top:clickedBackground="@color/link_text_color_clicked_bg"
        android:typeface="sans" />

    <TextView
        android:id="@+id/time_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_textview"
        android:layout_marginTop="1dip"
        android:layout_toEndOf="@+id/thumbnail"
        android:textColor="#343434"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/caption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_desc"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toStartOf="@+id/menu"
        android:paddingTop="4dp"
        android:textColor="#343434"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/note_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/caption"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toStartOf="@+id/menu"
        android:paddingTop="4dp"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/menu"
        android:background="@drawable/overflow_menu_selector"
        android:padding="8dp"
        android:contentDescription="@string/content_description_item_menu"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_overflow_dark"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</RelativeLayout>
